container_commands:
  01-setup:
      command: yum -y install nodejs npm --enablerepo=epel
  02-update:
      command: npm update -g npm
  03-install:
      command: npm install
      cwd: "/var/app/ondeck"
  04-build:
      command: npm run build
      cwd: "/var/app/ondeck"