commands:
  01-installNode:
    command: yum install nodejs --enablerepo=epel-testing
container_commands:
  01-selfUpdate:
    command: npm update npm -g
    ignoreErrors: true
  02-install:
    command: npm install
    ignoreErrors: true
  03-globalWebpack:
      command: npm install webpack -g
      ignoreErrors: true
  04-build:
    command: npm run build