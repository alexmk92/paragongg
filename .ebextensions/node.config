container_commands:
  01-setup:
      command: curl --silent --location https://rpm.nodesource.com/setup_4.x | bash -
  02-update:
      command: yum -y install nodejs
  03-install:
      command: npm install
      cwd: "/var/app/ondeck"
  04-build:
      command: npm run build
      cwd: "/var/app/ondeck"