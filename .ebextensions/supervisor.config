packages:
  yum:
    python27-setuptools: []
    dos2unix: []
container_commands:
  01-dos2unix:
      command: dos2unix -k .ebextensions/supervise.sh
  02-restart-queue
      command: php artisan queue:restart
  03-permissions:
    command: chmod 700 .ebextensions/supervise.sh
  04-supervise:
    command: ".ebextensions/supervise.sh"